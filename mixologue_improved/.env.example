# =============================================================================
# MIXOLOGUE DOCKER ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values according to your environment
# =============================================================================

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-key-here-change-me-in-production

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=False

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-domain.com

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-frontend-domain.com

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# PostgreSQL database configuration
POSTGRES_DB=mixologue
POSTGRES_USER=mixologue_user
POSTGRES_PASSWORD=your-secure-database-password-here

# Legacy database URL (for backward compatibility)
DATABASE_URL=postgresql://mixologue_user:your-secure-database-password-here@db:5432/mixologue

# =============================================================================
# REDIS SETTINGS
# =============================================================================

# Redis password for caching and sessions
REDIS_PASSWORD=your-secure-redis-password-here

# =============================================================================
# EMAIL SETTINGS
# =============================================================================

# Email backend configuration (for password reset, notifications, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Default from email
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# CONFIGURATION DES SERVICES IA
# =============================================================================

# Configuration OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Configuration Ollama (IA locale pour cocktails et prompts créatifs)
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:latest
OLLAMA_PROMPT_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=60
OLLAMA_TEMPERATURE=0.8
OLLAMA_MAX_TOKENS=2000

# Configuration Stable Diffusion (génération d'images de cocktails)
STABLE_DIFFUSION_URL=http://stable-diffusion:7860

# =============================================================================
# NGINX SETTINGS
# =============================================================================

# Port configuration
HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# SSL/TLS settings (uncomment for HTTPS)
# SSL_CERTIFICATE_PATH=/path/to/your/certificate.crt
# SSL_PRIVATE_KEY_PATH=/path/to/your/private.key

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Gunicorn workers (adjust based on your server resources)
# Formula: (2 x CPU cores) + 1
GUNICORN_WORKERS=4

# Celery worker concurrency
CELERY_CONCURRENCY=2

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to True for development environment
DEVELOPMENT=False

# Django admin settings
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com
DJANGO_SUPERUSER_PASSWORD=your-admin-password-here

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Database backup settings
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# Health check settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# MEDIA AND STATIC FILES
# =============================================================================

# Maximum file upload size (in MB)
MAX_FILE_SIZE=100

# Static and media file settings
STATIC_URL=/static/
MEDIA_URL=/media/

# =============================================================================
# RATE LIMITING
# =============================================================================

# API rate limiting (requests per second)
API_RATE_LIMIT=10

# Login rate limiting (requests per minute)
LOGIN_RATE_LIMIT=5

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Cache timeout (in seconds)
CACHE_TIMEOUT=3600

# Session timeout (in seconds)
SESSION_TIMEOUT=86400

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Sentry for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# Google Analytics (optional)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords for all services
# 3. Regularly rotate your secret keys and passwords
# 4. Use environment-specific values for different deployments
# 5. Consider using a secrets management service for production
# 
# =============================================================================